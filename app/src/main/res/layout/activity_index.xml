    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imgBtnPfp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circularbananaframe"
            android:contentDescription="ProfilePic"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/RoundCornerTV1"
            app:layout_constraintEnd_toStartOf="@+id/RoundCornerTV1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/RoundCornerTV1"
            app:srcCompat="@drawable/banana" />

        <androidx.cardview.widget.CardView
            android:id="@+id/RoundCornerTV1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#A4DDF6"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewBanana"
            app:layout_constraintEnd_toStartOf="@+id/imageViewBanana"
            app:layout_constraintStart_toEndOf="@+id/imgBtnPfp"
            app:layout_constraintTop_toTopOf="@+id/imageViewBanana">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageViewBanana"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circularbananaframe"
            android:backgroundTint="#ffffff"
            android:contentDescription="Banana"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/RoundCornerTV2"
            app:layout_constraintEnd_toStartOf="@+id/RoundCornerTV2"
            app:layout_constraintStart_toEndOf="@+id/RoundCornerTV1"
            app:layout_constraintTop_toTopOf="@+id/RoundCornerTV2"
            app:srcCompat="@drawable/banana" />

        <androidx.cardview.widget.CardView
            android:id="@+id/RoundCornerTV2"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#A4DDF6"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewBanana"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtBananaCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/imgBtnSettings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/settingiconframeblue"
            android:contentDescription="setting"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/RoundCornerTV2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/RoundCornerTV2"
            app:srcCompat="@drawable/settingicon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

